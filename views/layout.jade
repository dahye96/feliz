    script(src="/swiper/dist/js/swiper.min.js")
    script(src="/vue/dist/vue.js")
  body
    style.
      .swiper-container {
        width: 100%;
        height: 100%;
      }

      .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
      }

    .nav
      a.logo(href='/')

      .buttons
        .menu
          i.fa.fa-bars
        .service-tab.tab(onclick='slidePage(0)') 서비스 소개
        .invitation-tab.tab(onclick='slidePage(1)') 사용 예시
        .review-tab.tab(onclick='slidePage(2)') 사용자 후기
        a.template.tab(href='/template') 초대장 만들기
        .register.tab.no-hover
          i.fa.fa-user-circle.login-button
    block content

